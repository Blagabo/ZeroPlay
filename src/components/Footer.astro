---
const currentYear = new Date().getFullYear()

const links = {
	legal: [
		{ name: "Términos y Condiciones", href: "#" },
		{ name: "Política de Privacidad", href: "#" },
		{ name: "Política de Cookies", href: "#" },
	],
	social: [
		{ name: "Instagram", href: "https://www.instagram.com/zeroplay.tv/", icon: "instagram" },
	],
}
---

<footer class="mt-20 border-t border-white/10">
	<div class="mx-auto max-w-7xl px-4 py-12">
		<div class="grid grid-cols-1 gap-8 md:grid-cols-4">
			<!-- Logo y descripción -->
			<div class="md:col-span-2">
				<h2 class="text-2xl font-bold text-white">
					Zero<span class="text-primary-500">Play</span>
				</h2>
				<p class="mt-4 max-w-md text-white/80">
					Disfruta del mejor entretenimiento en streaming con calidad premium y contenido
					actualizado diariamente.
				</p>
			</div>

			<!-- Enlaces legales -->
			<div>
				<h3 class="mb-4 text-lg font-semibold text-white">Legal</h3>
				<ul class="space-y-2">
					{
						links.legal.map((link) => (
							<li>
								<a href={link.href} class="text-white/80 transition-colors hover:text-white">
									{link.name}
								</a>
							</li>
						))
					}
				</ul>
			</div>

			<!-- Redes sociales -->
			<div>
				<h3 class="mb-4 text-lg font-semibold text-white">Síguenos</h3>
				<div class="flex space-x-4">
					{
						links.social.map((link) => (
							<a
								href={link.href}
								target="_blank"
								class="text-white/80 transition-colors hover:text-white"
								aria-label={link.name}
							>
								<span class="sr-only">{link.name}</span>
								<i class={`fab fa-${link.icon} text-xl`} />
							</a>
						))
					}
				</div>
			</div>
		</div>

		<!-- Copyright -->
		<div class="mt-8 border-t border-white/10 pt-8">
			<p class="text-center text-white/60">
				© {currentYear} ZeroPlay. Todos los derechos reservados.
			</p>
		</div>
	</div>
</footer>
