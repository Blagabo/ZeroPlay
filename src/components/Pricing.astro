---
import Button from "../components/UI/Button"
const plans = [
	{
		name: "1 Dispositivo",
		price: 10,
		period: "mes",
		features: [
			"10000+ canales de TV en vivo",
			"120K+ Películas y Series",
			"Películas y series actualizadas",
			"Calidad SD/HD/FULL HD/4K",
			"Netflix / Disney+ / HBO / ESPN+",
			"Soporte 24/7",
		],
		popular: false,
	},
	{
		name: "2 Dispositivos",
		price: 18,
		period: "mes",
		features: [
			"10000+ canales de TV en vivo",
			"120K+ Películas y Series",
			"Películas y series actualizadas",
			"Calidad SD/HD/FULL HD/4K",
			"Netflix / Disney+ / HBO / ESPN+",
			"Soporte 24/7",
		],
		popular: true,
	},
	{
		name: "3 Dispositivos",
		price: 25,
		period: "mes",
		features: [
			"10000+ canales de TV en vivo",
			"120K+ Películas y Series",
			"Películas y series actualizadas",
			"Calidad SD/HD/FULL HD/4K",
			"Netflix / Disney+ / HBO / ESPN+",
			"Soporte 24/7",
		],
		popular: false,
	},
]
---

<section id="planes" class="px-4 py-20">
	<div class="mx-auto max-w-6xl">
		<h2 class="mb-12 text-center text-3xl font-bold text-white md:text-4xl">Planes y Precios</h2>

		<div class="grid gap-8 md:grid-cols-3">
			{
				plans.map((plan) => (
					<div
						class={`glass relative rounded-xl p-6 ${plan.popular ? "transform md:-translate-y-4" : ""}`}
					>
						{plan.popular && (
							<div class="absolute -top-4 left-1/2 -translate-x-1/2 transform">
								<span class="rounded-full bg-secondary-500 px-4 py-1 text-sm font-semibold text-white">
									Más Popular
								</span>
							</div>
						)}

						<h3 class="mb-2 text-xl font-bold text-white">{plan.name}</h3>
						<div class="mb-4">
							<span class="text-4xl font-bold text-white">${plan.price}</span>
							<span class="text-white/80">/{plan.period}</span>
						</div>

						<ul class="mb-6 space-y-3">
							{plan.features.map((feature) => (
								<li class="flex items-center text-white/90">
									<svg
										class="mr-2 h-5 w-5 text-secondary-400"
										fill="none"
										stroke="currentColor"
										viewBox="0 0 24 24"
									>
										<path
											stroke-linecap="round"
											stroke-linejoin="round"
											stroke-width="2"
											d="M5 13l4 4L19 7"
										/>
									</svg>
									{feature}
								</li>
							))}
						</ul>

						<Button
							href="/order"
							data-astro-prefetch
							className={`w-full rounded-lg py-3 font-semibold transition-colors ${
								plan.popular
									? "bg-secondary-500 text-white hover:bg-secondary-600"
									: "bg-white/10 text-white hover:bg-white/20"
							}`}
						>
							Elegir Plan
						</Button>
					</div>
				))
			}
		</div>
	</div>
</section>
